@model Corum.Models.MenuRolesViewModel

@{    
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-lg-6 main">
            <h4>Роли для пункта меню @Model.MenuInfo.menuName</h4>

            @using (Html.BeginForm("AssignRoles", "Access", FormMethod.Post, null))
            {
                @Html.HiddenFor(m => m.MenuInfo.Id, new { @id = "menuId", @Name = "menuId" })
                <div style="font-size: 13px;">
                    <div class="grid-mvc" data-lang="en" data-gridname="" data-selectable="true" data-multiplefilters="true">
                        <div class="grid-wrap">
                            <table class="table table-striped table-bordered no-footer sort-table-header">
                                <thead>
                                    <tr>
                                        <th class="grid-header centered_column">Роль</th>
                                        <th class="grid-header"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var role in Model.Roles)
                                    {
                                        <tr class="odd gradeX">
                                            <td class="">
                                                <div style="float: left">
                                                    @role.RoleName
                                                </div>
                                            </td>
                                            <td class="centered_column">
                                                <div>
                                                    <input type="checkbox" name="handledItems" value="@role.RoleId" checked="@role.Assigned" class="unhandled">
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="form-group" style="margin-top: 10px;">
                    <div class="row list-group">
                        <div class="col-md-12 col-sm-12">
                            <input type="submit" value="Сохранить" class="btn btn-default pull-right" />
                        </div>
                    </div>
                </div>


            }
        </div>
    </div>
</div>


