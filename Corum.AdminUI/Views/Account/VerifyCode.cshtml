@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model CorumAdminUI.Models.VerifyCodeViewModel
@{
    ViewBag.Title = "Проверка кода авторизации";
}
<div class="bg-login-sl"></div>
<div class="row">
    <div class="col-xs-6 col-xs-offset-3 col-sm-offset-3 col-md-offset-3">
        <div class="logo-login"></div>
        <h2 class="title-t2">@ViewBag.Title.</h2>
        <div class="well bs-component loginForm form_tl">
            <section id="loginForm">
                @using (Html.BeginForm("VerifyCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("provider", @Model.Provider)
                    @Html.Hidden("rememberMe", @Model.RememberMe)
                    <h4 class="form_tl">Введите код авторизации, который был отослан вам на почту</h4>
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Code, new { @class = "col-md-3 control-label text-center" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBoxFor(m => m.RememberBrowser)
                                    @Html.LabelFor(m => m.RememberBrowser, new { @style = "padding-left:0;" })
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-9">
                            <input type="submit" value="Подтвердить" class="btn btn-default btn-tl" />
                        </div>
                    </div>
                }
            </section>
        </div>
         </div>
</div>  


@section scripts {
        @Scripts.Render("~/bundles/jqueryval")
}
