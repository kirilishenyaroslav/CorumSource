
@model  Corum.Models.ImportErrorsNavigationResult<Corum.Models.ViewModels.ImportError>
@using System.Security.Policy
@using GridMvc.Html


<div style="font-size: 13px;">
    @(Html.Grid(Model.DisplayValues)            
                  .Columns(columns =>
                  {
                      columns.Add(model => model.NumRow)
                       .Titled("Номер строки в файле").Filterable(true).Sortable(true);

                      columns.Add(model => model.ColumnName)
                        .Titled("Столбец").Filterable(true).Sortable(true);

                      columns.Add(model => model.CommentError)
                        .Titled("Описание ошибки").Filterable(true).Sortable(true);

                      columns.Add(model => model.IsCommentType, true);

                  }).Filterable().WithPaging((int)Model.RequestParams.PageSize).WithMultipleFilters().SetRowCssClasses(item => item.IsCommentType == 1 ? "redclass" : "yellowclass"))
</div>

