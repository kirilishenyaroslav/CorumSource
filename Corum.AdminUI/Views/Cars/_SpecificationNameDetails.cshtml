@model Corum.Models.ViewModels.Cars.SpecificationNamesViewModel

<div class="form-group" style="margin-top: 20px;">
    @Html.LabelFor(model => model.SpecCode, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-4">
        @Html.EditorFor(model => model.SpecCode, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
        @Html.ValidationMessageFor(model => model.SpecCode, "", new { @class = "text-danger" })
    </div>
</div>


<div class="form-group">
    @Html.LabelFor(model => model.SpecName, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-6">
        @Html.TextAreaFor(model => model.SpecName, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
        @Html.ValidationMessageFor(model => model.SpecName, "", new { @class = "text-danger" })
    </div>
</div>
