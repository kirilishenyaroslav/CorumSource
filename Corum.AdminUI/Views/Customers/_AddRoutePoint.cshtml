@model Corum.Models.ViewModels.Customers.RouteViewModel

<div id="routePointsInfoDialogOrg" class="row" style="display: none; margin:auto;">
    @Html.Hidden("AddRoutePointId")

    <div class="form-group row">
        <label class="col-md-4" style="font-weight: normal !important;">
            Тип точки
        </label>
        <div class="col-md-8">
            @Html.TextBox("RoutePointTypeId", "",
                     htmlAttributes: new
                     {
                         id = "RoutePointTypeId",
                         @class = "filter_dropdown",
                         @name = "RoutePointTypeId",
                         data_source_url = Url.Action("GetRoutePoint", "Customers"),
                         data_droplist_placeholder = "Выберите тип точки",
                         data_selected_text = ""
                     })
        </div>
    </div>


    <div class="form-group row">
        <label class="col-md-4" style="font-weight: normal !important;">
            Контактное лицо
        </label>
        <div class="col-md-8">
            @Html.TextBox("ContactPerson", "",
                     htmlAttributes: new
                     {
                         id = "ContactPerson",
                         @name = "ContactPerson"
                     })
        </div>
    </div>

    <div class="form-group row">
        <label class="col-md-4" style="font-weight: normal !important;">
            Контактный телефон
        </label>
        <div class="col-md-8">
            @Html.TextBox("ContactPersonPhone", "",
                     htmlAttributes: new
                     {
                         id = "ContactPersonPhone",
                         @name = "ContactPersonPhone"
                     })
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-4" style="font-weight: normal !important;">
            Номер дополнительной точки по порядку
        </label>
        <div class="col-md-8">
            @Html.TextBox("NumberPoint", "",
                     htmlAttributes: new
                     {
                         id = "NumberPoint",
                         @name = "NumberPoint"
                     })
        </div>
    </div>
</div>
