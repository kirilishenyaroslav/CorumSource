<div id="partialModul" class="row" style="display: none; margin:auto;">

    <div class="form-group row">
        <label class="col-md-4" style="font-weight: normal !important;">
            Услуга для тендера
        </label>
        <div class="col-md-8">
      @Html.TextBox("Receiver", "",
                          htmlAttributes: new
                          {
                              id = "ReceiverId",
                              @class = "filter_dropdown",
                              @name = "ReceiverId",
                              data_source_url = Url.Action("GetReceivers", "Orders"),
                              data_droplist_placeholder = "Список услуг",
                              data_selected_text = ""
                          })
        </div>
    </div>

    <div class="form-group row">
        <label class="col-md-4" style="font-weight: normal !important;">
            Количество автомобилей
        </label>
        <div class="col-md-8" >
            <input type="number" min="1" value="1" />
        </div>
    </div>
</div>
