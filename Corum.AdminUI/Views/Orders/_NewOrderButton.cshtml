@model IEnumerable<Corum.Models.ViewModels.Orders.OrderTypeViewModel>

<div class="dropdown" style="display:inline-block;">
    <button class="btn btn-info dropdown-toggle" style="margin-bottom:10px; margin-left:10px;" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
        Новая заявка
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1" style="top:80% !important; font-size:12px;">
        @foreach (var otype in Model)
        {
            <li>@Html.ActionLink(otype.TypeName, "NewOrder", "Orders", new { OrderTypeId = otype.Id }, null)</li>
        }
    </ul>
</div>
