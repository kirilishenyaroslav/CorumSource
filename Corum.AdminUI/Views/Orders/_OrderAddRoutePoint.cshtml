

<div id="routePointsInfoDialog" class="row" style="display: none; margin:auto;">
    @Html.Hidden("AddRoutePointId")

    <div class="form-group row">
        <label class="col-md-4" style="font-weight: normal !important;">
            Контактное лицо
        </label>
        <div class="col-md-8">
            @Html.TextBox("ContactPerson", "",
                     htmlAttributes: new
                     {
                         id = "ContactPerson",
                         @name = "ContactPerson"
                     })
        </div>
    </div>

    <div class="form-group row">
        <label class="col-md-4" style="font-weight: normal !important;">
            Контактный телефон
        </label>
        <div class="col-md-8">
            @Html.TextBox("ContactPersonPhone", "",
                     htmlAttributes: new
                     {
                         id = "ContactPersonPhone",
                         @name = "ContactPersonPhone"
                     })
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-4" style="font-weight: normal !important;">
            Номер дополнительной точки по порядку
        </label>
        <div class="col-md-8">
            @Html.TextBox("NumberPoint", "",
                     htmlAttributes: new
                     {
                         id = "NumberPoint",
                         @name = "NumberPoint"
                     })
        </div>
    </div>
</div>