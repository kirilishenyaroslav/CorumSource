<div id="sendnotificationdialog" class="row" style="display: none; margin:auto;">

    <div class="form-group row">
        <label class="col-md-4" style="font-weight: normal !important;">
            Получатель
        </label>
        <div class="col-md-8">
            @Html.TextBox("Receiver","",
                     htmlAttributes: new
                     {
                         id = "ReceiverId",
                         @class = "filter_dropdown",
                         @name = "ReceiverId",
                         data_source_url =Url.Action("GetReceivers", "Orders"),
                         data_droplist_placeholder = "Выберите получателя уведомления",
                         data_selected_text = ""
                     })
        </div>
    </div>    
    
    <div class="form-group row">
        <label class="col-md-4" style="font-weight: normal !important;">
            Текст сообщения получателю
        </label>
        <div class="col-md-8">
            @Html.TextArea("MessageText", "",
                     htmlAttributes: new
                     {
                         id = "MessageText",
                         @name = "MessageText"
                     })
        </div>
    </div>          
</div>
