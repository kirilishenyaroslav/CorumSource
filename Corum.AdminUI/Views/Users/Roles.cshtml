@model Corum.Models.ViewModels.UserRolesViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 main">
    <h4>Роли пользователя @Model.userInfo.displayName</h4>

    @using (Html.BeginForm("AssignRoles", "Users", FormMethod.Post, null))
    {
        @Html.HiddenFor(m => m.userInfo.userId, new { @id = "userId", @Name = "userId" })
        <div style="font-size: 13px;">
            <div class="grid-mvc" data-lang="en" data-gridname="" data-selectable="true" data-multiplefilters="true">
                <div class="grid-wrap">
                    <table class="table table-striped table-bordered no-footer sort-table-header">
                        <thead>
                        <tr>
                            <th class="grid-header centered_column">Группа ролей</th>
                            <th class="grid-header centered_column">Название роли</th>
                            <th class="grid-header centered_column">Описание роли</th>
                            <th class="grid-header"></th>
                        </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in Model.roles.OrderBy(x=>x.roleName))
                            {
                                <tr class="odd gradeX">
                                    <td class="">
                                        <div style="float: left">
                                            @role.roleGroupName
                                        </div>
                                    </td>
                                     <td class="">
                                        <div style="float: left">
                                            @role.roleName
                                        </div>
                                    </td>
                                    <td class="">
                                        <div style="float: left">
                                            @role.roleDescription
                                        </div>
                                    </td>
                                    <td class="centered_column">
                                        <div>
                                            <input type="checkbox" name="handledItems" value="@role.roleId" checked="@role.assigned" class="unhandled">
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
          </div>
            <div class="form-group" style="margin-top: 10px;">
                <div class="row list-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" value="Сохранить" class="btn btn-default" />
                    </div>
                </div>
            </div>
            }
        </div>
        </div>
    </div>

