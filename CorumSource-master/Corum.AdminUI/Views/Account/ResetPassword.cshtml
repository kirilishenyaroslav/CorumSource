@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@model CorumAdminUI.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Ввод нового пароля";
}

<div class="bg-login-sl"></div>
<div class="row">
    <div class="col-xs-6 col-xs-offset-3 col-sm-offset-3 col-md-offset-3">
        <div class="logo-login"></div>
        <h2 class="title-t2">@ViewBag.Title.</h2>
        <div class="well bs-component loginForm form_tl">
            <section id="loginForm">
                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                    @Html.AntiForgeryToken()
                    <h4 class="form_tl">Ввод нового пароля</h4>
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Code)
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-9">
                            <input type="submit" class="btn btn-default btn-tl" value="Применить" />
                        </div>
                    </div>
                }
                </section>
</div>
    </div>
</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
