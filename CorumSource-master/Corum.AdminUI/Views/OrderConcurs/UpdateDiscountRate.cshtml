@model Corum.Models.ViewModels.OrderConcurs.ConcursDiscountRateModel
@{
    ViewBag.Title = "UpdateConcursDiscountRate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("UpdateDiscountRate", "OrderConcurs", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Детальная информация о ставке дисконтирования</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.Id, new { htmlAttributes = new { @class = "form-control" } })

        @Html.Partial("_ConcursDiscountRateDetails")
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Применить" class="btn btn-default" />
            </div>
        </div>

    </div>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            InitializeDateTimePickers();
            InitFilterDropDowns();
        });

    </script>
}
