@model Corum.Models.ViewModels.Orders.OrderClientsViewModel
@{
    ViewBag.Title = "Регистрация клиент";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("UpdateClient","Orders", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Изменение информации о заказчике №&nbsp;@Model.Id</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        @Html.HiddenFor(model => model.Id, new { htmlAttributes = new { @class = "form-control" } })
       
        @Html.Partial("_ClientDetails")

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 ">
                <div class="row">
                    @Html.ActionLink("Отмена", "OrdersClients", "Orders", null, new { @class = "btn btn-success" })
                    <input type="submit" value="Подтвердить" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

@section scripts
{
    <script>
        $(document).ready(function ()
        {
            InitializeDateTimePickers();
            InitFilterDropDowns();

        });

    </script>
}
