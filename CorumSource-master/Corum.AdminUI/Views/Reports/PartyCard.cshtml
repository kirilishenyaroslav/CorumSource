@model Corum.Models.ViewModels.PartyCardViewModel 

@{
    ViewBag.Title = "Карточка партии";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 main">
            <div class="row">
                <div style="margin-bottom: 15px; text-align:center;" class="col-md-12">
                    <span style="margin-bottom: 20px; font-weight: bold;">Карточка товарной партии</span>
                </div>
            </div>
            <div class="row">
                <ul class="nav nav-tabs nav-list" role="tablist">
                    <li role="presentation" class="active">
                        <a class="tab-page" id="aPage1" href="#Page1" role="tab" data-toggle="tab">Описание партии <br>и количество</a>
                    </li>
                    <li role="presentation">
                        <a class="tab-page" id="aPage2" href="#Page2" role="tab" data-toggle="tab">Место хранения <br>и показатели учета</a>
                    </li>
                    <li role="presentation">
                        <a class="tab-page" id="aPage4" href="#Page4" role="tab" data-toggle="tab">Информация <br>о заказе и цены продажи</a>
                    </li>
                    <li role="presentation">
                        <a class="tab-page" id="aPage5" href="#Page5" role="tab" data-toggle="tab">Документы и <br> движение</a>
                    </li>
                </ul>

                <div class="tab-content tab-cont-all">
                    <div role="tabpanel" class="active filter-tab-pane tab-pane row" id="Page1">
                        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Номенклатура</strong>
                                        @Html.EditorFor(model => model.restRow.Product, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Шифр(Артикул)</strong>
                                        @Html.EditorFor(model => model.restRow.Shifr, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Чертеж</strong>
                                        @Html.EditorFor(model => model.restRow.Figure, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Единица измерения</strong>
                                        @Html.EditorFor(model => model.restRow.Measure, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                            <div class="row">
                                
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Вес единицы, кг</strong>
                                        @Html.EditorFor(model => model.restRow.Weight, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Масса остатка, кг</strong>
                                        @Html.EditorFor(model => model.restRow.MassAfter, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Текущий остаток (количество)</strong>
                                        @Html.EditorFor(model => model.restRow.QuantityAfter, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Группа товаров</strong>
                                        @Html.EditorFor(model => model.restRow.pGroup, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Тип товаров</strong>
                                        @Html.EditorFor(model => model.restRow.pType, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Производитель</strong>
                                        @Html.EditorFor(model => model.restRow.Producer, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Дата производства</strong>
                                        @Html.EditorFor(model => model.restRow.ProduceDate, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                            </div>
                        </div>                  
                    </div>
                    <div role="tabpanel" class="filter-tab-pane tab-pane row" id="Page2">
                        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Склад</strong>
                                        @Html.EditorFor(model => model.restRow.Storage, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Страна хранения</strong>
                                        @Html.EditorFor(model => model.restRow.StorageCountry, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Город хранения</strong>
                                        @Html.EditorFor(model => model.restRow.StorageCity, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Себестоимость плановая полная, @Model.restRow.BalanceCurrency</strong>
                                        @Html.EditorFor(model => model.restRow.PCP_After, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Себестоимость плановая переменная, @Model.restRow.BalanceCurrency</strong>
                                        @Html.EditorFor(model => model.restRow.PCPC_After, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Cебестоимость фактическая полная, @Model.restRow.BalanceCurrency</strong>
                                        @Html.EditorFor(model => model.restRow.FCP_After, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Себестоимость фактическая переменная, @Model.restRow.BalanceCurrency</strong>
                                        @Html.EditorFor(model => model.restRow.FCPC_After, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Балансодержатель</strong>
                                        @Html.EditorFor(model => model.restRow.BalanceKeeper, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>ЦФО</strong>
                                        @Html.EditorFor(model => model.restRow.Сenter, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div role="tabpanel" class="filter-tab-pane tab-pane row" id="Page4">
                        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Номер заказа в производство</strong>
                                        @Html.EditorFor(model => model.restRow.InnerOrderNum, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Номер заказа получателя</strong>
                                        @Html.EditorFor(model => model.restRow.OrderNum , new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Документ создания товарной партии</strong>
                                        @Html.EditorFor(model => model.restRow.PrihodDocType, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Готовность к продаже</strong>
                                        @Html.EditorFor(model => model.restRow.ReadyForSaleStatus, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Дата реконсервации</strong>
                                        @Html.EditorFor(model => model.restRow.ReconcervationDate, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Получатель плановый</strong>
                                        @Html.EditorFor(model => model.restRow.pRecieverPlan, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Группа получателя планового</strong>
                                        @Html.EditorFor(model => model.restRow.RecieverGroupPlan, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                                
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Получатель фактический</strong>
                                        @Html.EditorFor(model => model.restRow.pRecieverFact, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>

                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Группа получателя фактическая</strong>
                                        @Html.EditorFor(model => model.restRow.RecieverGroupPlan, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Балансовая стоимость</strong>
                                        @Html.EditorFor(model => model.restRow.BP_After, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Цена конечного потребителя</strong>
                                        @Html.EditorFor(model => model.restRow.PE_After, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <strong>Цена первого покупателя</strong>
                                        @Html.EditorFor(model => model.restRow.PF_After, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", @readonly = "readonly" } })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div role="tabpanel" class="filter-tab-pane tab-pane row" id="Page5">
                        <div style="font-size: 13px;">
                            <div class="grid-mvc" data-lang="en" data-gridname="" data-selectable="true" data-multiplefilters="true">
                                <div class="grid-wrap">
                                    <table class="table table-striped table-bordered no-footer sort-table-header">
                                        <thead>
                                            <tr>
                                                <th class="grid-header centered_column">Дата документа</th>
                                                <th class="grid-header centered_column">Номер документа</th>
                                                <th class="grid-header centered_column">Тип документа</th>
                                                <th class="grid-header centered_column">Количество по документу</th>
                                                <th class="grid-header"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var doc in Model.docs)
                                            {
                                                <tr class="odd gradeX">
                                                    <td class="centered_column">
                                                          @doc.DocDate
                                                    </td>
                                                    <td>
                                                          @doc.DocNum 
                                                    </td>
                                                    <td>
                                                        @doc.DocType
                                                    </td>
                                                    <td>
                                                        @doc.Quantity
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
      </div>
    </div>
</div>

