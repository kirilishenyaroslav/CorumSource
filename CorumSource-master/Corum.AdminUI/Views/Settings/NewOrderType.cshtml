@model Corum.Models.ViewModels.Orders.OrderTypeViewModel

@{
    ViewBag.Title = "NewOrderType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("NewOrderType", "Settings", FormMethod.Post))
{
    <div class="form-horizontal">
        <h4>Создание нового типа заявок</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.Id, new { htmlAttributes = new { @class = "form-control" } })

      @Html.Partial("_OrderTypeDetails")

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </div>
    </div>
}
