
@model Corum.Models.ViewModels.Orders.OrderTypeViewModel

@{
    ViewBag.Title = "UpdateOrderType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{

    <div class="form-horizontal" style="font-size: 13px;">
        <h4>Детальная информация о типе заявки</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id, new { htmlAttributes = new { @class = "form-control" } })

        @Html.Partial("_OrderTypeDetails")

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Применить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section scripts
{
    <script>
        $(document).ready(function ()
        {
            InitializeDateTimePickers();
            InitFilterDropDowns();

        });

    </script>
}
